<script>
  // Redirect #aplicar to /aplicar page
  if (window.location.hash === '#aplicar') {
    window.location.replace('/aplicar');
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Comunidad Carousel
    const comunidadImages = document.querySelectorAll('.comunidad-img');
    const prevBtn = document.querySelector('.comunidad-btn.prev');
    const nextBtn = document.querySelector('.comunidad-btn.next');
    let currentIndex = 0;

    const showImage = (index: number) => {
      comunidadImages.forEach((img, i) => {
        img.classList.toggle('active', i === index);
      });
    };

    if (prevBtn && nextBtn) {
      prevBtn.addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + comunidadImages.length) % comunidadImages.length;
        showImage(currentIndex);
      });

      nextBtn.addEventListener('click', () => {
        currentIndex = (currentIndex + 1) % comunidadImages.length;
        showImage(currentIndex);
      });
    }

    // CV Form - WhatsApp Integration
    const cvForm = document.getElementById('cv-form') as HTMLFormElement;

    cvForm?.addEventListener('submit', (e) => {
      e.preventDefault();

      const nombre = (document.getElementById('nombre') as HTMLInputElement).value;
      const email = (document.getElementById('email') as HTMLInputElement).value;
      const telefono = (document.getElementById('telefono') as HTMLInputElement).value;
      const ciudad = (document.getElementById('ciudad') as HTMLInputElement).value;
      const puesto = (document.getElementById('puesto') as HTMLSelectElement).value;

      const message = `*POSTULACION LABORAL - BRIANE*

*Datos del Postulante:*
━━━━━━━━━━━━━━━━━━
*Nombre:* ${nombre}
*Email:* ${email}
*Teléfono:* ${telefono}
*Ciudad:* ${ciudad}
*Puesto:* ${puesto}
━━━━━━━━━━━━━━━━━━

_Por favor, adjunte su CV en este chat._`;

      const whatsappNumber = '51936636750';
      const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_blank');
    });

    // Reveal animations on scroll
    const revealElements = document.querySelectorAll('.reveal, .stagger-children');
    const observerOptions = {
      threshold: 0.15,
      rootMargin: '0px 0px -50px 0px'
    };

    const revealObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('revealed');
        }
      });
    }, observerOptions);

    revealElements.forEach(el => revealObserver.observe(el));

    // --- API Integration: Update gallery images from backend ---
    const API_URL = 'http://localhost:8000';

    // Update Equipo gallery
    fetch(`${API_URL}/api/gallery/equipo/`)
      .then(res => res.json())
      .then(data => {
        const items = data.results || data;
        if (!items.length) return;
        const galleryItems = document.querySelectorAll('.equipo-gallery-item');
        // Items are duplicated for infinite scroll, so update both halves
        const half = galleryItems.length / 2;
        items.forEach((item: any, i: number) => {
          if (i >= half) return;
          const el = galleryItems[i];
          const elDupe = galleryItems[i + half];
          const img = el?.querySelector('img');
          const imgDupe = elDupe?.querySelector('img');
          const nombre = el?.querySelector('.equipo-nombre');
          const nombreDupe = elDupe?.querySelector('.equipo-nombre');
          const comentario = el?.querySelector('.equipo-comentario');
          const comentarioDupe = elDupe?.querySelector('.equipo-comentario');
          if (img) { img.src = item.image; img.alt = item.title || img.alt; }
          if (imgDupe) { imgDupe.src = item.image; imgDupe.alt = item.title || imgDupe.alt; }
          if (nombre) nombre.textContent = item.person_name || nombre.textContent;
          if (nombreDupe) nombreDupe.textContent = item.person_name || nombreDupe.textContent;
          if (comentario) comentario.textContent = `"${item.person_comment || ''}"`;
          if (comentarioDupe) comentarioDupe.textContent = `"${item.person_comment || ''}"`;
        });
      })
      .catch(() => {});

    // Update Eventos gallery
    fetch(`${API_URL}/api/gallery/eventos/`)
      .then(res => res.json())
      .then(data => {
        const items = data.results || data;
        if (!items.length) return;
        const eventoItems = document.querySelectorAll('.evento-item img');
        items.forEach((item: any, i: number) => {
          const img = eventoItems[i] as HTMLImageElement;
          if (img) { img.src = item.image; img.alt = item.title || img.alt; }
        });
      })
      .catch(() => {});

    // Update Comunidad carousel
    fetch(`${API_URL}/api/gallery/comunidad/`)
      .then(res => res.json())
      .then(data => {
        const items = data.results || data;
        if (!items.length) return;
        const comunidadImgs = document.querySelectorAll('.comunidad-img');
        items.forEach((item: any, i: number) => {
          const img = comunidadImgs[i] as HTMLImageElement;
          if (img) { img.src = item.image; img.alt = item.title || img.alt; }
        });
      })
      .catch(() => {});
  });
</script>
