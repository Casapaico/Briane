---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/sections/Hero.astro';
import ValueProposition from '../components/sections/ValueProposition.astro';
import HomeServicesTabs from '../components/sections/HomeServicesTabs.astro';
import SolutionsTabs from '../components/sections/SolutionsTabs.astro';
import Clients from '../components/sections/Clients.astro';
import CallToAction from '../components/sections/CallToAction.astro';
---

<BaseLayout
  title="Inicio"
  description="BRIANE - Empresa peruana líder en transporte logístico y almacenamiento. Más de 40 años brindando soluciones logísticas integrales con tecnología de punta, monitoreo 24/7 y máxima seguridad."
>
  <!-- Hero Section con CTAs prominentes -->
  <Hero />

  <!-- Servicios SUPERVAN y ALMACENES con fondo parallax -->
  <HomeServicesTabs />

  <!-- Propuesta de Valor - Beneficios clave -->
  <ValueProposition />

  <!-- Soluciones por Industria -->
  <SolutionsTabs />

  <!-- Clientes que confían en nosotros -->
  <Clients />

  <!-- CTA Final -->
  <CallToAction
    title="Transforme su logística hoy"
    description="Únase a las empresas que ya confían en BRIANE para optimizar sus operaciones logísticas."
    primaryButtonText="Contactar Ahora"
    primaryButtonHref="/contactenos"
    secondaryButtonText="Conocer más"
    secondaryButtonHref="/briane"
  />
</BaseLayout>
