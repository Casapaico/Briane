---
import PageLayout from '../layouts/PageLayout.astro';
import Stats from '../components/sections/Stats.astro';
import CallToAction from '../components/sections/CallToAction.astro';
import DynamicLines from '../components/ui/DynamicLines.astro';

const nosotrosImages = [
  '/images/nosotros/nosotros1.jpg',
  '/images/nosotros/nosotros2.jpg',
  '/images/nosotros/nosotros3.jpg',
  '/images/nosotros/nosotros4.jpg',
  '/images/nosotros/nosotros5.jpg',
];

const valores = [
  'Trabajo en equipo',
  'Liderazgo',
  'Pasión',
  'Integridad',
  'Seguridad',
];

const historiaData = [
  {
    year: '1982',
    title: 'Origen de la Compañía',
    description: 'Se fusionan las empresas Transportes Caravana y Considex S.A., dedicadas al transporte de minerales y alquiler de maquinarias; dando origen a la Compañía Minera San Martín. Continúan las actividades en la operación de Cemento Andino en Tarma y transporte de yeso para Cemento Lima. Cementos Lima y Cemento Andino, actualmente llamado Unacem, nos contrató para operar la cantera de Atocongo y como resultado de una buena operación nos amplió el contrato a otras canteras, como las ubicadas en Pucará.',
    image: '/images/historia/1982.jpg'
  },
  {
    year: '2005',
    title: 'Asociaciones con Puertos',
    description: 'Se establecen alianzas estratégicas con los principales puertos del Perú, fortaleciendo nuestra presencia en la cadena logística portuaria y ampliando la cobertura de nuestros servicios de transporte de carga.',
    image: '/images/historia/2005.webp'
  },
  {
    year: '2007',
    title: 'SUPERVAN S.A.C. - Socio Estratégico',
    description: 'SUPERVAN S.A.C. es socio estratégico de sus clientes y tiene el firme compromiso de cumplir con los requerimientos comerciales acordados dentro del marco legal pertinente, brindando un servicio de transporte de carga.',
    image: '/images/historia/2007.png'
  },
  {
    year: '2010',
    title: 'Primera Comunidad de Trabajadores',
    description: 'Se crea la primera comunidad de trabajadores Briane, fortaleciendo los lazos entre colaboradores y promoviendo una cultura organizacional basada en el trabajo en equipo y el compañerismo.',
    image: '/images/historia/2010.jpg'
  },
  {
    year: '2012',
    title: 'Bono de Referido',
    description: 'Se implementa el programa de Bono de Referido, incentivando a nuestros colaboradores a recomendar talento para formar parte del equipo Briane, fortaleciendo así nuestro proceso de selección.',
    image: '/images/historia/2012.jpg'
  },
  {
    year: '2015',
    title: 'Curso de Familiarización CAMC',
    description: 'Se realiza el Curso de Familiarización de Unidad CAMC, capacitando a nuestros conductores en el manejo de nuevas unidades para garantizar la seguridad y eficiencia en nuestras operaciones.',
    image: '/images/historia/2015.jpg'
  },
  {
    year: '2019',
    title: 'Reconocimiento a Mejores Conductores',
    description: 'Reconocimiento a los mejores conductores del mes de enero, destacando su compromiso, puntualidad y excelencia en el servicio de transporte.',
    image: '/images/historia/2019.jpg'
  },
  {
    year: '2022',
    title: 'Alianza con la Universidad Privada del Norte',
    description: 'Se establece una alianza estratégica con la Universidad Privada del Norte (UPN), brindando beneficios educativos a nuestros colaboradores y promoviendo su desarrollo profesional continuo.',
    image: '/images/historia/2022.jpg'
  },
  {
    year: '2026',
    title: 'Digitalización y Mejora Continua',
    description: 'Mejora continua en la digitalización de Briane, con la incorporación de nuevos sistemas tecnológicos que optimizan nuestros procesos logísticos y fortalecen la eficiencia operativa.',
    image: '/images/historia/2026.png'
  },
];

const clientesHomologados = [
  { nombre: 'San Fernando', logo: '/images/homologaciones/san-fernando.png' },
  { nombre: 'Redondos', logo: '/images/homologaciones/redondos.png' },
  { nombre: 'Alicorp', logo: '/images/homologaciones/alicorp.png' },
  { nombre: 'CUSA', logo: '/images/homologaciones/cusa.png' },
  { nombre: 'Unicon', logo: '/images/homologaciones/unicon.svg' },
  { nombre: 'Mixercon', logo: '/images/homologaciones/mixercon.png' },
];
---

<PageLayout
  title="BRIANE"
  description="Conoce la historia, misión, visión y valores de BRIANE, empresa peruana líder en transporte logístico y almacenamiento."
  heroTitle="Sobre BRIANE"
  heroSubtitle="Más de 40 años de experiencia en soluciones logísticas"
>
  <!-- Nosotros Section -->
  <section class="nosotros-section section">
    <div class="container">
      <div class="nosotros-grid">
        <div class="nosotros-content reveal">
          <h2>Nosotros</h2>
          <p>
            Estamos siempre listos para brindarles las mejores alternativas de
            solución para atender las necesidades de nuestros clientes; nuestra
            gente enfocada por mejorar nuestros procesos y hacer uso de las
            tecnologías más adecuadas; personas éticas y comprometidas con la
            seguridad y el cuidado de nuestro medio ambiente.
          </p>
          <p>
            El resultado es que somos una de las principales empresas de
            transporte de carga del país, atendiendo los estándares más altos
            de calidad y seguridad que garantizan la ejecución exitosa de los
            proyectos de nuestros clientes.
          </p>
        </div>

        <div class="nosotros-gallery reveal-right">
          <div class="gallery-container" id="gallery">
            <div class="gallery-track">
              {nosotrosImages.map((img, index) => (
                <div class="gallery-slide" data-index={index}>
                  <img
                    src={img}
                    alt={`Equipo BRIANE - Imagen ${index + 1}`}
                    class="gallery-image"
                    loading={index === 0 ? "eager" : "lazy"}
                  />
                </div>
              ))}
            </div>
            <div class="gallery-nav">
              <button class="gallery-btn gallery-prev" aria-label="Imagen anterior">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
              </button>
              <button class="gallery-btn gallery-next" aria-label="Imagen siguiente">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </button>
            </div>
            <div class="gallery-dots">
              {nosotrosImages.map((_, index) => (
                <button
                  class={`gallery-dot ${index === 0 ? 'active' : ''}`}
                  data-index={index}
                  aria-label={`Ir a imagen ${index + 1}`}
                ></button>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <DynamicLines lineNumber={1} />

  <!-- Mission, Vision, Values Section -->
  <section class="mvv-section">
    <div class="mvv-background">
      <div class="mvv-pattern"></div>
    </div>
    <div class="container">
      <div class="mvv-header">
        <h2 class="mvv-section-title">Nuestra Identidad</h2>
        <div class="mvv-section-line"></div>
      </div>
      <div class="mvv-grid stagger-children">
        <!-- Mision -->
        <div class="mvv-column mvv-card">
          <div class="mvv-letter-wrapper">
            <div class="mvv-letter">M</div>
            <div class="mvv-letter-shadow">M</div>
          </div>
          <h3 class="mvv-title">Misión</h3>
          <div class="mvv-divider"></div>
          <p class="mvv-text">
            Brindamos al cliente soluciones logísticas para su negocio a través
            de un excelente servicio de transporte terrestre de carga en general.
          </p>
        </div>

        <!-- Vision -->
        <div class="mvv-column mvv-card">
          <div class="mvv-letter-wrapper">
            <div class="mvv-letter">V</div>
            <div class="mvv-letter-shadow">V</div>
          </div>
          <h3 class="mvv-title">Visión</h3>
          <div class="mvv-divider"></div>
          <p class="mvv-text">
            Ser reconocida por el cliente como su principal socio estratégico
            para el transporte de su carga.
          </p>
        </div>

        <!-- Valores -->
        <div class="mvv-column mvv-card">
          <div class="mvv-letter-wrapper">
            <div class="mvv-letter">V</div>
            <div class="mvv-letter-shadow">V</div>
          </div>
          <h3 class="mvv-title">Valores</h3>
          <div class="mvv-divider"></div>
          <ul class="mvv-values-list">
            {valores.map((valor, index) => (
              <li style={`animation-delay: ${index * 0.1}s`}>
                <span class="valor-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </span>
                {valor}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <DynamicLines lineNumber={2} />

  <!-- Historia Section -->
  <section class="historia-section section">
    <div class="container">
      <div class="historia-header">
        <span class="historia-subtitle">Nuestra Trayectoria</span>
        <h2 class="historia-title">Historia</h2>
        <p class="historia-intro">
          A lo largo de los años, Briane ha participado en los principales proyectos de consumo masivo, construcción y minería. Nuestra historia se remonta al año 1982, atravesando una coyuntura social, política y económica inestable. A pesar de ello, nuestros fundadores apostaron por el país al crear una empresa especializada en el traslado de carga pesada en el puerto del Callao.
        </p>
        <p class="historia-intro">
          Desde entonces, fomentamos la cultura del "Siempre Listos" entre nuestros colaboradores, practicando valores como la honestidad, el compromiso y el respeto en la formación de choferes profesionales. Briane comenzó con solo dos camiones y tolvas trasladando productos de consumo masivo; sin embargo, con mucho esfuerzo y entusiasmo, logramos diferenciarnos de la competencia con base en la disciplina, la puntualidad y el buen trato al cliente.
        </p>
        <p class="historia-intro">
          Así, hemos llegado a la actualidad contando con la flota más variada de semitráileres y tolvas. Además, hoy lideramos con la mayor flota de camiones a gas natural, apostando firmemente por el cuidado del medio ambiente.
        </p>
      </div>

      <!-- Timeline -->
      <div class="timeline-container" id="timeline">
        <div class="timeline-scroll-wrapper">
          <div class="timeline-track">
            <div class="timeline-line"></div>
            <div class="timeline-progress"></div>
            {historiaData.map((item, index) => (
              <button
                class={`timeline-point ${index === 0 ? 'active' : ''}`}
                data-index={index}
                aria-label={`Ver historia del año ${item.year}`}
              >
                <span class="timeline-year">{item.year}</span>
                <span class="timeline-dot"></span>
              </button>
            ))}
          </div>
        </div>

        <!-- Timeline Navigation Arrows -->
        <button class="timeline-nav timeline-nav-prev" aria-label="Años anteriores">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button class="timeline-nav timeline-nav-next" aria-label="Años siguientes">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>

      <!-- Historia Content Panel -->
      <div class="historia-content-panel" id="historia-panel">
        {historiaData.map((item, index) => (
          <div class={`historia-item ${index === 0 ? 'active' : ''}`} data-index={index}>
            <div class="historia-item-grid">
              <div class="historia-item-image">
                <div class="historia-image-wrapper">
                  <img
                    src={item.image}
                    alt={`Briane en ${item.year}`}
                    loading={index === 0 ? "eager" : "lazy"}
                  />
                  <div class="historia-year-badge">{item.year}</div>
                </div>
              </div>
              <div class="historia-item-content">
                <div class="historia-item-header">
                  <span class="historia-item-year">{item.year}</span>
                  <h3 class="historia-item-title">{item.title}</h3>
                </div>
                <p class="historia-item-description">{item.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <DynamicLines lineNumber={3} />

  <!-- Cultura BRIANE Section -->
  <section class="cultura-section">
    <div class="cultura-container">
      <div class="cultura-image-wrapper" id="cultura-reveal">
        <img
          src="/images/cultura/cultura-briane.jpg"
          alt="Cultura BRIANE"
          class="cultura-image"
          loading="lazy"
        />
        <div class="cultura-overlay"></div>
      </div>
      <div class="cultura-content">
        <div class="cultura-text-wrapper">
          <span class="cultura-badge">Nuestros Principios</span>
          <h2 class="cultura-title">Cultura BRIANE</h2>
          <div class="cultura-divider"></div>
          <p class="cultura-description">
            Nos basamos en la honestidad y el comportamiento ético como pilares fundamentales de nuestro trabajo diario. Nuestros códigos de ética impulsan y promueven estos valores tanto entre nuestros colaboradores como frente a nuestros clientes estratégicos. De esta manera, garantizamos que todas nuestras actividades se desarrollen con eficiencia y eficacia.
          </p>
          <div class="cultura-values">
            <div class="cultura-value-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>Honestidad</span>
            </div>
            <div class="cultura-value-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>Ética</span>
            </div>
            <div class="cultura-value-item">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
              <span>Eficiencia</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <DynamicLines lineNumber={1} />

  <!-- Certificaciones Section -->
  <section class="certificaciones-section section">
    <div class="container">
      <div class="certificaciones-header">
        <span class="certificaciones-subtitle">Calidad Garantizada</span>
        <h2 class="certificaciones-title">Certificaciones</h2>
        <p class="certificaciones-intro">
          Sustentamos nuestra eficiencia y eficacia a través de nuestra certificación de calidad.
        </p>
      </div>

      <div class="certificaciones-grid">
        <div class="certificacion-card">
          <div class="certificacion-image">
            <img src="/images/certificaciones/iso90.png" alt="Certificación ISO 9001:2015" loading="lazy" />
          </div>
          <div class="certificacion-content">
            <h3 class="certificacion-name">Certificación ISO 9001:2015</h3>
            <p class="certificacion-description">Certification of Quality Management Systems</p>
            <div class="certificacion-badge">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                <polyline points="9 12 12 15 16 10"></polyline>
              </svg>
              <span>Certificado Vigente</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <DynamicLines lineNumber={2} />

  <!-- Homologaciones Section -->
  <section class="homologaciones-section section">
    <div class="container">
      <div class="homologaciones-header">
        <span class="homologaciones-subtitle">Confianza de Grandes Empresas</span>
        <h2 class="homologaciones-title">Homologaciones de nuestros clientes</h2>
        <p class="homologaciones-intro">
          Estamos preparados para afrontar las distintas auditorías de calidad y seguridad realizadas por empresas especializadas, las cuales son contratadas por nuestros clientes. Estamos convencidos de que, para alcanzar cualquier objetivo, es fundamental aplicar un enfoque de mejora continua basado en la planificación, ejecución, verificación y acción.
        </p>
      </div>

      <div class="homologaciones-grid">
        {clientesHomologados.map((cliente) => (
          <div class="homologacion-card">
            <div class="homologacion-logo">
              <img src={cliente.logo} alt={`Logo ${cliente.nombre}`} loading="lazy" />
            </div>
          </div>
        ))}
      </div>

    </div>
  </section>

  <Stats variant="primary" />

  <DynamicLines lineNumber={1} />

  <!-- Academia BRIANE Section -->
  <section class="academia-section section">
    <div class="container">
      <div class="academia-header text-center reveal">
        <span class="academia-badge">Formación Continua</span>
        <h2>Universidad BRIANE</h2>
        <p class="academia-intro">
          Nuestro compromiso con la excelencia comienza con la capacitación permanente
          de nuestros colaboradores. Academia BRIANE es nuestro programa integral de
          formación que garantiza los más altos estándares de calidad en cada servicio.
        </p>
      </div>

      <div class="academia-image-container text-center reveal">
        <img src="/images/academia.png" alt="Academia BRIANE" class="academia-image" />
      </div>

      <div class="academia-grid stagger-children">
        <div class="academia-pillar">
          <div class="pillar-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
              <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
            </svg>
          </div>
          <h3>Capacitación Técnica</h3>
          <p>
            Programas especializados en manejo de equipos, seguridad vial,
            transporte de materiales peligrosos y operaciones logísticas avanzadas.
          </p>
          <ul class="pillar-features">
            <li>Certificación en manejo defensivo</li>
            <li>Uso de equipos tecnológicos</li>
            <li>Protocolos de seguridad</li>
          </ul>
        </div>

        <div class="academia-pillar">
          <div class="pillar-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3>Desarrollo Personal</h3>
          <p>
            Fortalecemos habilidades blandas, liderazgo y trabajo en equipo
            para crear una cultura organizacional sólida y colaborativa.
          </p>
          <ul class="pillar-features">
            <li>Liderazgo y gestión</li>
            <li>Comunicación efectiva</li>
            <li>Trabajo en equipo</li>
          </ul>
        </div>

        <div class="academia-pillar">
          <div class="pillar-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
          </div>
          <h3>Seguridad y Calidad</h3>
          <p>
            Certificaciones internacionales en sistemas de gestión de calidad,
            seguridad ocupacional y medio ambiente.
          </p>
          <ul class="pillar-features">
            <li>ISO 9001 - Gestión de Calidad</li>
            <li>BASC - Seguridad Comercial</li>
            <li>Defensa Civil</li>
          </ul>
        </div>

        <div class="academia-pillar">
          <div class="pillar-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
          </div>
          <h3>Innovación Digital</h3>
          <p>
            Formación en nuevas tecnologías, digitalización de procesos y
            uso de plataformas de gestión logística.
          </p>
          <ul class="pillar-features">
            <li>Sistemas WMS y TMS</li>
            <li>Plataformas digitales</li>
            <li>Automatización de procesos</li>
          </ul>
        </div>
      </div>

      <div class="academia-stats reveal">
        <div class="stat-box">
          <div class="stat-number">300+</div>
          <div class="stat-label">Colaboradores capacitados anualmente</div>
        </div>
        <div class="stat-box">
          <div class="stat-number">500+</div>
          <div class="stat-label">Horas de formación al año</div>
        </div>
        <div class="stat-box">
          <div class="stat-number">95%</div>
          <div class="stat-label">Índice de satisfacción</div>
        </div>
      </div>

      <div class="academia-cta reveal">
        <p class="academia-cta-text">
          <strong>¿Interesado en formar parte de nuestro equipo?</strong><br/>
          En BRIANE invertimos en el desarrollo profesional de nuestros colaboradores
          porque creemos que el éxito de la empresa depende del crecimiento de su gente.
        </p>
        <a href="/trabaja-con-nosotros" class="btn btn-primary btn-lg">
          Ver Oportunidades Laborales
        </a>
      </div>
    </div>
  </section>

  <CallToAction
    title="¿Quiere conocer más sobre nosotros?"
    description="Estamos listos para conversar sobre cómo podemos ayudar a su empresa."
    primaryButtonText="Contáctenos"
    primaryButtonHref="/contactenos"
    secondaryButtonText=""
