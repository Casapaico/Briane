<script>
  // Gallery functionality
  const gallery = document.getElementById('gallery');
  const track = gallery?.querySelector('.gallery-track') as HTMLElement;
  const dots = gallery?.querySelectorAll('.gallery-dot');
  const prevBtn = gallery?.querySelector('.gallery-prev');
  const nextBtn = gallery?.querySelector('.gallery-next');
  let currentIndex = 0;
  const totalSlides = 5;
  let autoSlideInterval: ReturnType<typeof setInterval>;

  function goToSlide(index: number) {
    // Handle wrap-around
    if (index < 0) index = totalSlides - 1;
    if (index >= totalSlides) index = 0;

    currentIndex = index;
    if (track) {
      track.style.transform = `translateX(-${index * 100}%)`;
    }
    dots?.forEach((dot, i) => {
      dot.classList.toggle('active', i === index);
    });
  }

  function startAutoSlide() {
    autoSlideInterval = setInterval(() => {
      goToSlide(currentIndex + 1);
    }, 5000);
  }

  function resetAutoSlide() {
    clearInterval(autoSlideInterval);
    startAutoSlide();
  }

  // Start auto-slide
  startAutoSlide();

  // Click handlers for dots
  dots?.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      goToSlide(index);
      resetAutoSlide();
    });
  });

  // Navigation buttons
  prevBtn?.addEventListener('click', () => {
    goToSlide(currentIndex - 1);
    resetAutoSlide();
  });

  nextBtn?.addEventListener('click', () => {
    goToSlide(currentIndex + 1);
    resetAutoSlide();
  });

  // Pause on hover
  gallery?.addEventListener('mouseenter', () => {
    clearInterval(autoSlideInterval);
  });

  gallery?.addEventListener('mouseleave', () => {
    startAutoSlide();
  });

  // Touch/swipe support
  let touchStartX = 0;
  let touchEndX = 0;

  gallery?.addEventListener('touchstart', (e) => {
    touchStartX = (e as TouchEvent).changedTouches[0].screenX;
  });

  gallery?.addEventListener('touchend', (e) => {
    touchEndX = (e as TouchEvent).changedTouches[0].screenX;
    const diff = touchStartX - touchEndX;
    if (Math.abs(diff) > 50) {
      if (diff > 0) {
        goToSlide(currentIndex + 1);
      } else {
        goToSlide(currentIndex - 1);
      }
      resetAutoSlide();
    }
  });

  // Timeline functionality
  const timeline = document.getElementById('timeline');
  const timelinePoints = timeline?.querySelectorAll('.timeline-point');
  const timelineProgress = timeline?.querySelector('.timeline-progress') as HTMLElement;
  const historiaItems = document.querySelectorAll('.historia-item');
  const timelinePrevBtn = timeline?.querySelector('.timeline-nav-prev');
  const timelineNextBtn = timeline?.querySelector('.timeline-nav-next');
  const scrollWrapper = timeline?.querySelector('.timeline-scroll-wrapper') as HTMLElement;
  let currentTimelineIndex = 0;
  const totalTimelineItems = timelinePoints ? timelinePoints.length : 0;

  function updateTimeline(index: number) {
    // Update active point
    timelinePoints?.forEach((point, i) => {
      point.classList.toggle('active', i === index);
    });

    // Update progress bar
    if (timelineProgress) {
      const progress = (index / (totalTimelineItems - 1)) * 100;
      timelineProgress.style.width = `${progress}%`;
    }

    // Update content panel
    historiaItems.forEach((item, i) => {
      item.classList.toggle('active', i === index);
    });

    // Scroll active point into view
    const activePoint = timelinePoints?.[index] as HTMLElement;
    if (activePoint && scrollWrapper) {
      const pointRect = activePoint.getBoundingClientRect();
      const wrapperRect = scrollWrapper.getBoundingClientRect();
      const scrollLeft = scrollWrapper.scrollLeft;
      const pointCenter = pointRect.left + pointRect.width / 2;
      const wrapperCenter = wrapperRect.left + wrapperRect.width / 2;

      const newScrollLeft = scrollLeft + (pointCenter - wrapperCenter);
      scrollWrapper.scrollTo({
        left: newScrollLeft,
        behavior: 'smooth'
      });
    }

    currentTimelineIndex = index;
  }

  function goToTimelineItem(index: number) {
    if (index < 0) index = 0;
    if (index >= totalTimelineItems) index = totalTimelineItems - 1;
    updateTimeline(index);
  }

  // Click handlers for timeline points
  timelinePoints?.forEach((point, index) => {
    point.addEventListener('click', () => {
      goToTimelineItem(index);
    });
  });

  // Navigation buttons for timeline
  timelinePrevBtn?.addEventListener('click', () => {
    goToTimelineItem(currentTimelineIndex - 1);
  });

  timelineNextBtn?.addEventListener('click', () => {
    goToTimelineItem(currentTimelineIndex + 1);
  });

  // Keyboard navigation for timeline
  timeline?.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      goToTimelineItem(currentTimelineIndex - 1);
    } else if (e.key === 'ArrowRight') {
      goToTimelineItem(currentTimelineIndex + 1);
    }
  });

  // Initialize timeline
  updateTimeline(0);

</script>
