---
export interface Props {
  variant?: 'default' | 'elevated' | 'bordered';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  hover = false,
  class: className = '',
} = Astro.props;

const classes = `card card-${variant} card-padding-${padding} ${hover ? 'card-hover' : ''} ${className}`.trim();
---

<div class={classes}>
  <slot />
</div>

<style>
  .card {
    background-color: var(--color-white);
    border-radius: var(--radius-card);
    overflow: hidden;
  }

  /* Variants */
  .card-default {
    background-color: var(--color-white);
  }

  .card-elevated {
    box-shadow: var(--shadow-md);
  }

  .card-bordered {
    border: 1px solid var(--color-gray-200);
  }

  /* Padding */
  .card-padding-none {
    padding: 0;
  }

  .card-padding-sm {
    padding: var(--spacing-md);
  }

  .card-padding-md {
    padding: var(--spacing-lg);
  }

  .card-padding-lg {
    padding: var(--spacing-xl);
  }

  /* Hover effect */
  .card-hover {
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .card-hover:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
</style>
